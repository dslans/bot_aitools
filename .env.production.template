# Production Environment Configuration Template
# Copy this file to .env.production and fill in your actual values
# NEVER commit .env.production to version control

# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-production-bot-token
SLACK_USER_TOKEN=xoxp-your-production-user-token  # Optional: for user actions
SLACK_SIGNING_SECRET=your-production-signing-secret
# SLACK_APP_TOKEN is not needed for production HTTP mode

# Slack Admin Users (comma-separated list of user IDs)
ADMIN_USER_IDS=U1234567890,U0987654321

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/production-service-account-key.json
# For production, typically use service account key or Workload Identity

# BigQuery Configuration
BIGQUERY_DATASET=aitools_wiki_prod
BIGQUERY_LOCATION=US

# Security Configuration
# URL to your company's security guidelines document for AI evaluation
SECURITY_GUIDELINES_URL=https://your-company.com/security-guidelines

# AI Configuration
GEMINI_MODEL=gemini-2.5-flash
VERTEX_LOCATION=us-central1

# Application Configuration
ENVIRONMENT=production
PORT=8080
